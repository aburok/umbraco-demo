#addin "Cake.IIS"

//////////////////////////////////////////////////////////////////////
// ARGUMENTS
//////////////////////////////////////////////////////////////////////

var target = Argument("target", "Default");
var configuration = Argument("configuration", "Release");

//////////////////////////////////////////////////////////////////////
// PREPARATION
//////////////////////////////////////////////////////////////////////

// Define directories.
var buildDir = Directory("./UmbracoDemo/bin");

//////////////////////////////////////////////////////////////////////
// TASKS
//////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////// IIS  /////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

var appPoolName = "demo.umbraco.com";
Task("Website-Stop")
    .Description("Stops a remote Website")
    .Does(() =>
{
    StopPool(appPoolName);
    StopSite(appPoolName);
});

Task("Website-Start")
    .Description("Starts a local Website")
    .Does(() =>
{
    StartSite(appPoolName);
    StartPool(appPoolName);
});

////////////////////////////////////////////////////////////////////////////////
////////////////////////////////  File moving  /////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

var databaseTemplate = ".\\UmbracoDemo\\App_Data\\Umbraco_Empty_Base.sdf";
var database = ".\\UmbracoDemo\\App_Data\\Umbraco.sdf";

Task("CopyDatabase")
    .Does(()=>
{
    CopyFile(databaseTemplate, database);
});


Task("Clean")
    .IsDependentOn("Website-Stop")
    .Does(() =>
{
    CleanDirectory(buildDir);
});

var solutionFile = "./UmbracoDemo.sln";


////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////// MS Build  //////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

Task("Restore-NuGet-Packages")
    .IsDependentOn("Clean")
    .Does(() =>
{
    NuGetRestore(solutionFile);
});

Task("Build")
    .IsDependentOn("Restore-NuGet-Packages")
    .IsDependentOn("CopyDatabase")
    .Does(() =>
{
    if(IsRunningOnWindows())
    {
      // Use MSBuild
      MSBuild(solutionFile, settings =>
        settings.SetConfiguration(configuration));
    }
    else
    {
      // Use XBuild
      XBuild(solutionFile, settings =>
        settings.SetConfiguration(configuration));
    }
});

Task("Run-Unit-Tests")
    .IsDependentOn("Build")
    .Does(() =>
{
    NUnit3("./src/**/bin/" + configuration + "/*.Tests.dll", new NUnit3Settings {
        NoResults = true
        });
});


//////////////////////////////////////////////////////////////////////
// TASK TARGETS
//////////////////////////////////////////////////////////////////////

Task("Default")
    .IsDependentOn("Website-Stop")
    .IsDependentOn("Build")
    .IsDependentOn("Website-Start");

//////////////////////////////////////////////////////////////////////
// EXECUTION
//////////////////////////////////////////////////////////////////////

RunTarget(target);
